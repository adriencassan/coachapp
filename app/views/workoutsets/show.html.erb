<%= javascript_pack_tag 'chartkick.js' %>

<div class="page-wrapper">
  <div class="grid">

    <div class="row">

      <div class="col-xs-10 col-sm-5 col-sm-offset-3">
        <div class="page-title">
          <h3><%= @set.exercice.name %></h3>
          <div class="page-title-sub">
          <p><%= link_to workout_path(@set.workout),  class: "" do %><i class="fas fa-chevron-circle-left" style= "font-size: 15px"></i><%end%>
            <%= "Workout #{@set.workout.name} (#{@set.workout.date.strftime("%A, %d %B %y")})" %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-2 col-sm-1">
        <div class="page-title-back">

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-wrapper">
            <div class="card-title">Graphique des performances</div>
            <div class="card-content">

              <%= column_chart @graph, library: { hAxis: { format: 'dd/mm' }}, height: "200px" %>
            </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-wrapper">
          <div class="card-title">SÃ©ries</div>
          <div class="card-content">
            <div class="custom-table">
              <div class="row custom-table-header">
                <div class="col-xs-2 custom-table-cell">#</div>
                <div class="col-xs-2 custom-table-cell">Reps</div>
                <div class="col-xs-2 custom-table-cell">Poids</div>
                <div class="col-xs-2 custom-table-cell">Status</div>
                <div class="col-xs-4 custom-table-cell">Actions</div>
              </div>
              <% @set.repetitions.each_with_index do |repetition, index| %>
                <div class="row custom-table-row" id="<%= "repetition#{repetition.id}-show"%>">
                  <div class="col-xs-2 custom-table-cell"><%= index + 1 %></div>
                  <div class="col-xs-2 custom-table-cell"><%= repetition.quantity %></div>
                  <div class="col-xs-2 custom-table-cell"><%= repetition.weight %></div>
                  <div class="col-xs-2 custom-table-cell">
                    <%= simple_form_for [@set, repetition] do |f| %>
                      <%= f.input :is_complete, as: :hidden, input_html: { value: !repetition.is_complete } %>
                      <%= button_tag type: 'submit', class: "btn-icon" do %><i class="fas fa-check-circle <%= repetition.is_complete ? 'icon-green' : 'icon-grey' %>"></i><%end%>
                    <% end %>
                  </div>
                  <div class="col-xs-4 custom-table-cell">
                    <button class="round-btn white-btn sm-btn margin-left jsFormEditBtn" data-repetition=<%= "#{repetition.id}" %>>Modifier</button>
                  </div>
                </div>
                <div class="row custom-table-row hide" id="<%= "repetition#{repetition.id}-edit"%>">
                  <%= simple_form_for [@set, repetition] do |f| %>
                  <div class="form-group-custom">
                    <%= f.input :quantity, input_html: {class: "form-control-custom", id:"input_quantity_#{repetition.id}"} %>
                    <i class="fas fa-plus-circle jsFormInputBtnPlus form-icon" data-input=<%= "input_quantity_#{repetition.id}" %>></i>
                    <i class="fas fa-minus-circle jsFormInputBtnMinus form-icon" data-input=<%= "input_quantity_#{repetition.id}" %>></i>
                  </div>
                   <div class="form-group-custom">
                    <%= f.input :weight,label: "Poids", input_html: {class: "form-control-custom", id:"input_weight#{repetition.id}"} %>

                      <i class="fas fa-plus-circle jsFormInputBtnPlus form-icon" data-input=<%= "input_weight#{repetition.id}" %>></i>
                      <i class="fas fa-minus-circle jsFormInputBtnMinus form-icon" data-input=<%= "input_weight#{repetition.id}" %>></i>

                  </div>
                    <%= f.submit "OK", class: "blue-btn round-btn sm-btn" %>
                    <button class="round-btn white-btn sm-btn margin-left jsFormCloseBtn" data-repetition=<%= "#{repetition.id}" %>>Cancel</button>
                  <% end %>
                </div>
              <% end %>
              <div class="row custom-table-row">
                <div class="col-xs-8 custom-table-cell"></div>
                <div class="col-xs-4 custom-table-cell">
                  <%= link_to "Ajouter", new_workoutset_repetition_path(@set), class:"round-btn white-btn sm-btn"%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-wrapper">
            <div class="card-title">Feeback</div>
            <div class="card-content">
              <%= render "workoutsets/video", workoutsets: @set %>
            </div>
        </div>
      </div>
    </div>


  </div>
</div>

