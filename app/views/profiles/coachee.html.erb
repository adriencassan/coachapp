<%= javascript_pack_tag 'chartkick.js' %>

<div class="page-wrapper">
  <div class="grid">

    <div class="row">
      <div class="col-xs-10 col-sm-5 col-sm-offset-3">
        <div class="page-title">
          <h3><%= @profile.full_name %></h3>
          <div class="page-title-sub">
            <p><%= link_to coachees_path,  class: "" do %><i class="fas fa-chevron-circle-left" style= "font-size: 15px"></i><%end%>
            Fiche coaching</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-wrapper">
          <div class="card-title">Programmes</div>
          <div class="card-content">
            <div class="custom-table">
              <div class="row custom-table-header">
                <div class="col-xs-6 custom-table-cell">Nom</div>
                <div class="col-xs-2 custom-table-cell">Dernier</div>
                <div class="col-xs-4 custom-table-cell">Actions</div>
              </div>
              <% @programs.each do |workout| %>
              <div class="row custom-table-row"">
                <div class="col-xs-6 custom-table-cell"><%= workout.name %></div>
                <div class="col-xs-2 custom-table-cell"><%= workout.program_last_used.nil? ? "" : workout.program_last_used.strftime("%d.%m") %></div>
                <div class="col-xs-4 custom-table-cell">
                  <%= link_to "Modifier", profile_program_path(workout.profile, workout), class:"round-btn white-btn sm-btn"%>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-wrapper">
          <div class="card-title">Ses entrainements</div>
          <div class="card-content">
            <div class="custom-table">
              <div class="row custom-table-header">
                <div class="col-xs-2 custom-table-cell">Date</div>
                <div class="col-xs-4 custom-table-cell">Nom</div>
                <div class="col-xs-3 custom-table-cell">Charges Totales</div>
                <div class="col-xs-3 custom-table-cell">Actions</div>
              </div>
              <% @workouts.each do |workout| %>
              <div class="custom-table-row">
                <div class="row">
                  <div class="col-xs-2 custom-table-cell"><%= workout.date.strftime("%d.%m") %></div>
                  <div class="col-xs-4 custom-table-cell"><%= workout.name %></div>
                  <div class="col-xs-3 custom-table-cell"><%= "#{number_with_delimiter(workout.total_weight, separator: " ")} kg" %></div>
                  <div class="col-xs-3 custom-table-cell">
                   <button class="btn-icon margin-left" type="button" data-toggle="collapse" data-target="#collapseExample<%= workout.id -%>" aria-expanded="false" aria-controls="collapseExample<%= workout.id -%>"><i class="fas fa-chevron-circle-down"></i></button>
                 </div>
               </div>
               <div class="row">
                <div class="collapse" id="collapseExample<%= workout.id -%>" style= "width: 100%">
                  <%= render "profiles/workoutsets", workoutsets: workout.workoutsets %>
                </div>
              </div>
            </div>
            <% end %>
            <div class="card-pagination">
              <%= will_paginate @workouts, renderer: BootstrapPagination::Rails %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="card-wrapper">
        <div class="card-title">Ses r√©sultats (en kg)</div>
        <div class="card-content">

          <%= column_chart @results_graph, library: { hAxis: { format: 'dd/mm' }}, height: "200px" %>
        </div>
        <div class="card-carousel">
          <div id="carousel-example-generic" class="carousel" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <% @results.each do |result| %>
              <div class="item justify-content-center <%= result == @results.first ? "active" : "" -%>" style: "margin:auto">
                <div class="justify-content-center">
                <%= cl_image_tag(result.selfie,
                    width: 200, height: 200, crop: :fill) %>
                </div>
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= result.date.strftime("%d.%m.%y") %></h5>
                  <p><%= "Poids #{result.weight} kg" %></p>
                  <p><%= "MG : #{number_to_percentage(result.fatrate*100, precision: 0)}" %></p>
                </div>
              </div>
              <% end %>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
          </div>

        </div>


      </div>
    </div>
  </div>

</div>
</div>




