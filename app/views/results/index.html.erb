
<%= javascript_pack_tag 'chartkick.js' %>

<div class="page-wrapper">
  <div class="grid">

    <div class="row">
      <div class="col-xs-10 col-md-5 col-md-offset-3">
        <div class="page-title">
          <h3>RÃ©sultats</h3>
          <div class="page-title-sub">
          <% if current_user.profile.role == "Coach"  %>
            <p><%= link_to profile_profile_coachee_path(@profile), class:"btn-icon" do %><i class="fas fa-chevron-circle-left" style= "font-size: 15px"></i><%end%>
            <%= @profile.full_name %></p>
          <% else %>
            <p><%= link_to profile_workouts_path(@profile),  class: "" do %><i class="fas fa-chevron-circle-left" style= "font-size: 15px"></i><%end%>
          <% end  %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="card-wrapper">
            <div class="card-title">Graphique du poids</div>
            <div class="card-content">

              <%= column_chart @graph, library: { hAxis: { format: 'dd/mm' }}, height: "200px" %>
            </div>
        </div>
      </div>
    </div>

    <% @results.each do |result| %>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <div class="card-wrapper">
            <div class="card-title">
              <%= result.date.strftime("%A, %d %B %y") %>
            </div>
            <div class="card-content">
              <div class="card-content-split">
                  <div class="row">
                  <div class="col-xs-8 col-sm-8">
                    <%= cl_image_tag(result.selfie,
                    width: 200, height: 200, crop: :fill) %>
                  </div>
                  <div class="col-xs-4 col-sm-4">
                    <p>Poids:</p>
                    <p><%= "#{result.weight} kg" %></p>
                    <br>
                    <p>Masse Grasse :</p>
                    <p><%= "#{number_to_percentage(result.fatrate*100, precision: 0)}" %></p>
                  </div>
                </div>
              </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user.profile.role == "Athlete"  %>
      <div class="row">
         <div class="col-xs-12 col-md-6 col-md-offset-3">
            <div class="card-wrapper">
              <div class="card-title">
                Ajouter un nouveau resultat
              </div>
              <div class="card-content">
                <%= simple_form_for [@profile, @new_result] do |f| %>
                  <%= f.input :date, as: :string, placeholder:Date.today.to_s, input_html: {class: "datepicker"} %>
                  <%= f.input :weight %>
                  <%= f.input :fatmass %>
                  <%= f.input :selfie %>
                  <%= f.input :selfie_cache, as: :hidden %>
                  <%= f.submit "OK", class: "blue-btn round-btn sm-btn" %>
                <% end %>
              </div>
            </div>
          </div>
      </div>
    <%end%>

  </div>


</div>

