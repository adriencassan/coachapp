

<div class="page-wrapper">
  <div class="grid">

    <div class="row">
      <div class="col-xs-10 col-sm-5 col-sm-offset-3">
        <div class="page-title">
          <h3>RÃ©sultats</h3>
          <div class="page-title-sub">
            <p><%= @profile.full_name %></p>
          </div>
        </div>
      </div>
    </div>

    <% @results.each do |result| %>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <div class="card-wrapper">
            <div class="card-title">
              <%= result.date.strftime("%A, %d %B %y") %>
            </div>
            <div class="card-content">
              <div class="card-content-split">
                <div class="split-left">
                  <%= cl_image_tag(result.selfie,
                  width: 250, height: 250, crop: :fill) %>
                </div>
                <div class="split-right">
                  <p><%= "Poids: #{result.weight} kg" %></p>
                  <p><%= "Masse Grasse : #{result.fatmass} %" %></p>
                </div>
              </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
       <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <div class="card-wrapper">
            <div class="card-title">
              Ajouter un nouveau resultat
            </div>
            <div class="card-content">
              <%= simple_form_for [@profile, @new_result] do |f| %>
                <%= f.input :date, as: :string, placeholder:Date.today.to_s, input_html: {class: "datepicker"} %>
                <%= f.input :weight %>
                <%= f.input :fatmass %>
                <%= f.input :selfie %>
                <%= f.input :selfie_cache, as: :hidden %>
                <%= f.submit "OK", class: "blue-btn round-btn sm-btn" %>
              <% end %>
            </div>
          </div>
        </div>
    </div>

  </div>


</div>

