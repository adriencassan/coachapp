<div class="page-wrapper">
  <div class="grid">

    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3 nopadding">
       <%= simple_form_for @exercice do |f| %>
       <div class="form-row">
        <div class="form-group col-xs-9">
          <%= f.label "Video"%>
          <%= f.input :name, label: "Name"%>
          <%= f.input :nameEN, label: "Name (English)" %>
          <%= f.input :description%>
          <%= f.input :video%>
          <%= f.input :video_cache, as: :hidden %>
        </div>
        <div class="form-group col-xs-3">
          <%= f.submit 'Ajouter', class:"round-btn blue-btn md-btn margin-btn" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

